<!DOCTYPE html>
<html>
  <head>
    <title>BurningAirlines</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%# binding.pry %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if(User.find_by(id: session[:user_id]).nil? || User.find_by(id: session[:user_id]).user_type === "Customer") %>
      <%= render "includes/customer_menu" %>
    <% else %>
      <%= render "includes/admin_menu" %>
    <% end %>
    <%= yield %>
  </body>
</html>
